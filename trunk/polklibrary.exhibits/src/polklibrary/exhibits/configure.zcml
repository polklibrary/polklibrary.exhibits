<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="polklibrary.exhibits">

  <includeDependencies package="." />

  <i18n:registerTranslations directory="locales" />

  <include package=".browser" />
  <include package=".models" />


  <genericsetup:registerProfile
      name="default"
      title="polklibrary.exhibits"
      directory="profiles/default"
      description="Installs the polklibrary.exhibits add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:importStep
      name="polklibrary.exhibits-postInstall"
      title="polklibrary.exhibits post_install import step"
      description="Post install import step from polklibrary.exhibits"
      handler=".setuphandlers.post_install">
  </genericsetup:importStep>

  <genericsetup:registerProfile
      name="uninstall"
      title="polklibrary.exhibits"
      directory="profiles/uninstall"
      description="Uninstalls the polklibrary.exhibits add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:importStep
      name="polklibrary.exhibits-uninstall"
      title="polklibrary.exhibits uninstall import step"
      description="Import step run during ininstalling polklibrary.exhibits"
      handler=".setuphandlers.uninstall">
  </genericsetup:importStep>

  <utility
      factory=".setuphandlers.HiddenProfiles"
      name="polklibrary.exhibits-hiddenprofiles" />

</configure>
